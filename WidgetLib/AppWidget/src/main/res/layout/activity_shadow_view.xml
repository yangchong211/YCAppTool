<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:shadow_leftShow="false"
            app:shadow_topShow="false"
            app:shadow_rightShow="false"
            app:shadow_shadowColor="#2a000000"
            app:shadow_shadowLimit="5dp">

            <com.yc.roundcorner.view.RoundTextView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="阴影控件，效果图如下所示"
                android:textColor="#ff0000"
                android:textSize="15dp"
                android:textStyle="bold" />

        </com.yc.shadow.layout.ShadowLayout>

        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadow_cornerRadius="10dp"
            app:shadow_dx="0dp"
            app:shadow_dy="0dp"
            app:shadow_shadowColor="#2a000000"
            app:shadow_shadowLimit="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.yc.roundcorner.view.RoundTextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:rRadius="10dp"
                    android:text="直角控件阴影"
                    android:textColor="#000" />
            </RelativeLayout>



        </com.yc.shadow.layout.ShadowLayout>

        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:shadow_cornerRadius="18dp"
            app:shadow_dx="0dp"
            app:shadow_dy="0dp"
            app:shadow_shadowColor="#63F8C5B8"
            app:shadow_shadowLimit="8dp">

            <com.yc.roundcorner.view.RoundTextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                app:rRadius="10dp"
                android:text="完全圆形圆角"
                android:textColor="#000" />

        </com.yc.shadow.layout.ShadowLayout>


        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:shadow_cornerRadius="18dp"
            app:shadow_dx="0dp"
            app:shadow_dy="0dp"
            app:shadow_shadowColor="#2aff0000"
            app:shadow_shadowLimit="5dp">

            <com.yc.roundcorner.view.RoundTextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                app:rRadius="10dp"
                android:text="红色阴影"
                android:textColor="#000" />

        </com.yc.shadow.layout.ShadowLayout>


        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:shadow_cornerRadius="18dp"
            app:shadow_dx="0dp"
            app:shadow_dy="0dp"
            app:shadow_shadowColor="#2a0d00ff"
            app:shadow_shadowLimit="5dp">

            <com.yc.roundcorner.view.RoundTextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                app:rRadius="10dp"
                android:text="随便改变阴影颜色,颜色透明度更改阴影清晰度"
                android:textColor="#000" />
        </com.yc.shadow.layout.ShadowLayout>


        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:shadow_cornerRadius="18dp"
            app:shadow_dx="0dp"
            app:shadow_dy="0dp"
            app:shadow_shadowColor="#5500ff11"
            app:shadow_shadowLimit="10dp">

            <com.yc.roundcorner.view.RoundTextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:paddingRight="10dp"
                app:rRadius="10dp"
                android:text="阴影扩散区域改变"
                android:textColor="#000" />
        </com.yc.shadow.layout.ShadowLayout>


        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:shadow_cornerRadius="18dp"
            app:shadow_dx="5dp"
            app:shadow_dy="0dp"
            app:shadow_shadowColor="#5500bfff"
            app:shadow_shadowLimit="10dp">

            <com.yc.roundcorner.view.RoundTextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                app:rRadius="10dp"
                android:text="阴影x轴偏移"
                android:textColor="#000" />
        </com.yc.shadow.layout.ShadowLayout>


        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:shadow_cornerRadius="18dp"
            app:shadow_dx="0dp"
            app:shadow_dy="5dp"
            app:shadow_shadowColor="#55ff00d5"
            app:shadow_shadowLimit="10dp">

            <com.yc.roundcorner.view.RoundTextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                app:rRadius="10dp"
                android:text="阴影y轴偏移"
                android:textColor="#000" />
        </com.yc.shadow.layout.ShadowLayout>


        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:shadow_cornerRadius="18dp"
            app:shadow_leftShow="false"
            app:shadow_shadowColor="#55ff8c00"
            app:shadow_shadowLimit="10dp"
            app:shadow_topShow="false">

            <com.yc.roundcorner.view.RoundTextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                app:rRadius="10dp"
                android:text="不偏移xy,让上和左阴影不可见(如titleBar)"
                android:textColor="#000" />
        </com.yc.shadow.layout.ShadowLayout>


        <com.yc.shadow.layout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            app:shadow_cornerRadius="50dp"
            app:shadow_shadowLimit="10dp"
            app:shadow_shadowColor="#63F8C5B8"
            app:shadow_leftShow="true"
            app:shadow_rightShow="true"
            app:shadow_topShow="true"
            app:shadow_bottomShow="true">

            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:background="@drawable/pie_chart_shape_oval"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:text="圆形阴影"
                    android:textSize="@dimen/textSize10"
                    android:textColor="#000" />
            </LinearLayout>

        </com.yc.shadow.layout.ShadowLayout>

    </LinearLayout>

</ScrollView>
