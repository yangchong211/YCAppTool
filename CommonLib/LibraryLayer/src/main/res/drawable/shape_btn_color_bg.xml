<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <!-- 填充颜色 -->
    <solid android:color="#E5E5E5" />
    <!-- 线的宽度，颜色灰色 -->
    <stroke
        android:width="0dp"
        android:color="#E5E5E5" />
    <!-- 矩形的圆角半径 -->
    <corners android:radius="20dp" />
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

</shape>