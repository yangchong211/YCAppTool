<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_vibrator_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="1.开始震动"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_vibrator_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="2.取消震动"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_vibrator_1"/>

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_vibrator_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="3.震动2秒钟"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_vibrator_2"/>

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_media_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="4.播放raw资源文件"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_vibrator_3"/>

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_media_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="5.播放asset资源文件"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_media_1"/>

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_media_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="6.取消播放"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_media_2"/>

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_media_4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="7.设置播放媒体声音变大1"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_media_3"/>

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_media_5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="8.设置播放媒体声音变大2"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_media_4"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
