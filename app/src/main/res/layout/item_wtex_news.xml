<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_topic_face"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/avatar_default"/>
        <TextView
            android:id="@+id/tv_topic_name"
            tools:text="TEST"
            android:layout_toEndOf="@id/iv_topic_face"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText1"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_topic_tips"
            tools:text="TEST"
            android:layout_toEndOf="@id/iv_topic_face"
            android:layout_alignBottom="@id/iv_topic_face"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText1"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_topic_comment"
            android:layout_alignParentEnd="true"
            tools:text="12"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/blackText1"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_comment"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/tv_topic_node"
            android:layout_toStartOf="@id/tv_topic_comment"
            android:layout_marginEnd="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:text="Python"
            android:textSize="12sp"
            android:textColor="@color/blackText1"
            android:background="@color/whiteBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TEST"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/blackText1"/>

</LinearLayout>